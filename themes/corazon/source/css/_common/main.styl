.main{
  position: relative
  width:100%;
  min-height:100%
  padding: 100px 0 140px
  .content{
    width:90%
    margin:0 auto
    max-width: 1000px
    .archive{
      min-height: 400px
      position: relative
      .year{
        display: block;
        font-weight: bold;
        color: #d44950;
        text-shadow: 1px 1px #efefef, 3px 3px #ffc0cb;
        font-size: 38px;
        margin: 10px 0;
      }
      .archive_item{
        font-size:17px
        margin-left: 40px
        margin-top: 5px
        .date{
         color: #24a5db
        }
        a{
          margin-left: 10px
          color: #d0648a
          transition: all 0.5s ease
          &:hover{
            text-decoration: none
            opacity: 0.7
          }
        }
      }
      .page-nav{
        position: absolute
        bottom: 0
      }
    }
    .banner{
      margin: 60px auto 20px
      width:100%
      height: 400px
      background-color: #fefefe
      -moz-box-shadow: 0 2px 10px 1px rgba(0, 0, 0, 0.2);
      -webkit-box-shadow: 0 2px 10px 1px rgba(0, 0, 0, 0.2);
      box-shadow: 0 2px 10px 1px rgba(0, 0, 0, 0.2);
      position: relative;
      &:after{
      width: 180px;
      height: 40px;
      content: " ";
      margin-left: -90px;
      border: 1px solid rgba(200, 200, 200, .8);
      background: rgba(254, 254, 254, .6);
      -moz-box-shadow: 0px 0 3px rgba(0, 0, 0, 0.1);
      -webkit-box-shadow: 0px 0 3px rgba(0, 0, 0, 0.1);
      box-shadow: 0px 0 3px rgba(0, 0, 0, 0.1);
      -moz-transform: rotate(-10deg);
      -webkit-transform: rotate(-10deg);
      -o-transform: rotate(-10deg);
      transform: rotate(-10deg);
      position: absolute;
      left: 50%;
      top: -20px;
      }
      .headintro{
        padding: 20px
        p{
          text-align: center
          margin: 0 auto
        }
        .title{
          margin-top: 90px
          color:  #d44950
          font-size: 8rem
          text-shadow: 1px 1px #EFEFEF, 3px 3px #ffc0cb
        }
        .subtitle{
          font-size:24px
          color: #666
        }
      }
    }
  }
}

@media(max-width: 991px){
  .main{
    .content{
      .archive{
        .year{
          font-size:22px!important
          margin-left: 40px
        }
        .archive_item{
          font-size: 14px
          margin-left: 30px
        }
      }
      .banner{
        height: 300px
        .headintro{
          .title{
            margin-top: 60px
            font-size: 6rem
          }
        }
      }
    }
  }
}

@media(max-width: 767px){
  .main{
    .content{
      .banner{
        height: 260px
        .headintro{
          .title{
            font-size: 4rem
          }
        }
      }
    }
  }
}


@media(max-width: 480px){
  .main{
    padding-top: 80px
    .content{
      .banner{
        margin-top: 80px
        height: 260px
        .headintro{
          .subtitle{
            font-size: 2rem
          }
          .title{
            margin-top: 70px
            font-size: 3rem
            text-shadow: 1px 1px #efefef, 2px 2px #ffc0cb;
          }
        }
      }
    }
  }
}
